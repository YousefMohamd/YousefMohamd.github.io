<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title or metadata.title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ '/css/modern.css' | url }}">
  </head>
  <body class="site-body">
    <header class="site-header">
      <nav class="container nav-row">
        <ul class="main-nav">
          <li><a href="{{ '/' | url }}">Home</a></li>
          <li><a href="{{ '/about/' | url }}">About</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
      </nav>
    </header>

    <main id="main" class="container">
      {{ content | safe }}
    </main>

    <footer class="site-footer" id="contact">
      <div class="container footer-grid">
        <div>
          <h4>Contact Me</h4>
          <ul class="contact-list">
            <li><i class="fa fa-envelope"></i> <a href="mailto:{{ metadata.author.email }}">{{ metadata.author.email }}</a></li>
            <li><i class="fa fa-phone"></i> <a href="tel:+201154907557">+20 1154907557</a></li>
            <li><i class="fa fa-map-marker"></i> {{ metadata.author.location }}</li>
          </ul>
        </div>
        <div>
          <h4>Find Me Online</h4>
          <p class="social-icons">
            {% if metadata.social.linkedin %}<a href="{{ metadata.social.linkedin }}"><i class="fa fa-linkedin"></i></a>{% endif %}
            {% if metadata.social.behance %}<a href="{{ metadata.social.behance }}"><i class="fa fa-behance"></i></a>{% endif %}
            {% if metadata.social.instagram %}<a href="{{ metadata.social.instagram }}"><i class="fa fa-instagram"></i></a>{% endif %}
            {% if metadata.social.vimeo %}<a href="{{ metadata.social.vimeo }}"><i class="fa fa-vimeo"></i></a>{% endif %}
            {% if metadata.social.youtube %}<a href="{{ metadata.social.youtube }}"><i class="fa fa-youtube-play"></i></a>{% endif %}
          </p>
        </div>
      </div>
    </footer>

    <script src="{{ '/js/site.js' | url }}" defer></script>
  </body>
</html>
