<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{{ title or metadata.title }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# ستايلات القالب #}
    <link rel="stylesheet" href="{{ '/css/w3.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/style.css?v=11' | url }}">

    {# Font Awesome للأيقونات #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    {# Favicon (اختياري) #}
    <link rel="icon" href="{{ '/img/favicon.png' | url }}">

    <style>
      /* الصورة في الهيدر بدون إطار أو دائرة */
      #home img {
        border: 0 !important;
        border-radius: 0 !important;
        background: transparent !important;
        box-shadow: none !important;
        outline: 0 !important;
      }

      /* العرض الافتراضي للسيدبار والخلفية الأساسية */
      .w3-sidebar { width: 120px; background: #222; }

      /* محتوى الصفحة يتحرك يمينًا بمقدار عرض السيدبار */
      #main { margin-left: 120px; }

      /* تنظيف السايدبار وتصغير الأيقونات */
      nav.w3-sidebar { background: #111 !important; }
      nav.w3-sidebar .w3-bar-item {
        background: transparent !important;
        border: 0 !important;
        box-shadow: none !important;
      }
      nav.w3-sidebar .w3-bar-item i {
        font-size: 20px !important;
        display: block;
        margin: 8px auto 4px;
      }
      nav.w3-sidebar .w3-bar-item p {
        font-size: 12px !important;
        margin: 0;
      }
      nav.w3-sidebar .w3-bar-item.sidebar-link {
        padding: 14px 8px !important;
      }
      nav.w3-sidebar .w3-dark-grey,
      nav.w3-sidebar .w3-grey,
      nav.w3-sidebar .w3-gray {
        background: transparent !important;
      }
      nav.w3-sidebar .w3-bar-item:hover {
        background: rgba(255,255,255,0.06) !important;
      }

      {% raw %}
      /* موبايل: ألغِ الإزاحة */
      @media only screen and (max-width:600px) { #main { margin-left: 0; } }
      {% endraw %}
    </style>
  </head>

  <body class="w3-black">
    <!-- Sidebar -->
    <nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center" style="z-index:3">
      <!-- Home -->
      <a href="/#" class="w3-bar-item w3-button sidebar-link" title="Home" aria-label="Home">
        <i class="fa fa-home"></i>
        <p>Home</p>
      </a>

      <!-- About -->
      <a href="/#about" class="w3-bar-item w3-button sidebar-link" title="About" aria-label="About">
        <i class="fa fa-id-card" aria-hidden="true"></i>
        <p>About</p>
      </a>

      <!-- Projects (بدل Photos) -->
      <a href="/projects/" class="w3-bar-item w3-button sidebar-link" title="Projects" aria-label="Projects">
        <i class="fa fa-film" aria-hidden="true"></i>
        <p>Projects</p>
      </a>

      <!-- Contact -->
      <a href="/#contact" class="w3-bar-item w3-button sidebar-link" title="Contact" aria-label="Contact">
        <i class="fa fa-commenting" aria-hidden="true"></i>
        <p>Contact</p>
      </a>
    </nav>

    <!-- Navbar on small screens -->
    <div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
    <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
     <a href="/#" class="w3-bar-item w3-button" style="width:25% !important">Home</a>
     <a href="/#about" class="w3-bar-item w3-button" style="width:25% !important">About</a>
     <a href="/projects/" class="w3-bar-item w3-button" style="width:25% !important">Projects</a>
     <a href="/#contact" class="w3-bar-item w3-button" style="width:25% !important">Contact</a>
    </div>

    <div class="w3-padding-large" id="main">
      <main {% if templateClass %} class="{{ templateClass }}"{% endif %}>
        {{ content | safe }}
      </main>

      <!-- Footer -->
      <footer class="w3-content w3-padding-64 w3-text-grey w3-xlarge">
        <i class="fa fa-facebook-official w3-hover-opacity"></i>
        <i class="fa fa-instagram w3-hover-opacity"></i>
        <i class="fa fa-snapchat w3-hover-opacity"></i>
        <i class="fa fa-pinterest-p w3-hover-opacity"></i>
        <i class="fa fa-twitter w3-hover-opacity"></i>
        <i class="fa fa-linkedin w3-hover-opacity"></i>
        <p class="w3-medium">
          Powered by
          <a href="https://www.w3schools.com/w3css/default.asp" target="_blank" class="w3-hover-text-green">w3.css</a>
        </p>
      </footer>
    </div>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
